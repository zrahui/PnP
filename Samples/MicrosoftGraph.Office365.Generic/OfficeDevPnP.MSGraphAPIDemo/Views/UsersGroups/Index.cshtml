@model OfficeDevPnP.MSGraphAPIDemo.Models.PlayWithUsersViewModel
@using OfficeDevPnP.MSGraphAPIDemo.Models
@{
    ViewBag.Title = "Chapter 6 - Users and Groups";
}

<div class="row">
    <div class="col-md-12">
        <p>
            In this section you can find samples related to the Users and Groups APIs.
        </p>
    </div>
</div>
<div class="row">
    @using (Html.BeginForm("PlayWithUsers", "UsersGroups", FormMethod.Post, new { id = "PlayWithUsers" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-4">
            <h2>Mail</h2>
            <p>
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserPrincipalName, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.UserPrincipalName, new { htmlAttributes = new { @class = "form-control", placeholder = "UPN" } })
                            @Html.ValidationMessageFor(model => model.UserPrincipalName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </p>
            <p><a class="btn btn-default" onclick="document.forms['PlayWithUsers'].submit();">Play with Users &raquo;</a></p>
        </div>
    }
    @using (Html.BeginForm("PlayWithSecurityGroups", "UsersGroups", FormMethod.Post, new { id = "PlayWithSecurityGroups" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-4">
            <h2>Security Groups</h2>
            <p>
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserPrincipalName, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.UserPrincipalName, new { htmlAttributes = new { @class = "form-control", placeholder = "UPN" } })
                            @Html.ValidationMessageFor(model => model.UserPrincipalName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </p>
            <p><a class="btn btn-default" onclick="document.forms['PlayWithSecurityGroups'].submit();">Play with Security Groups &raquo;</a></p>
        </div>
    }
    @using (Html.BeginForm("PlayWithUnifiedGroups", "UsersGroups", FormMethod.Post, new { id = "PlayWithUnifiedGroups" }))
    {
        @Html.AntiForgeryToken()
        <div class="col-md-4">
            <h2>Office 365 Groups</h2>
            <p>
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.MailSendTo, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.MailSendTo, new { htmlAttributes = new { @class = "form-control", placeholder = "Fwd Recipient Email" } })
                            @Html.ValidationMessageFor(model => model.MailSendTo, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.MailSendToDescription, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.MailSendToDescription, new { htmlAttributes = new { @class = "form-control", placeholder = "Fwd Recipient Name" } })
                            @Html.ValidationMessageFor(model => model.MailSendToDescription, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </p>
            <p><a class="btn btn-default" onclick="document.forms['PlayWithUnifiedGroups'].submit();">Play with Office 365 Groups &raquo;</a></p>
        </div>
    }
</div>

